<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/index.css">
</head>
<body>

  <h1><%= title %></h1>
  <p>there is currently <%= characters.length %> characters created!</p>

  <form action="/characters" method="post">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" maxlength="40" required />

    <label for="type">Type</label>
    <select id="type" name="type" required>
      <option value="" disabled selected>Select a type</option>
      <% types.forEach(t => { %>
        <option value="<%=t%>"><%=t%></option>
      <% }) %>
    </select>

    <label for="trait">Trait</label>
    <select id="trait" name="trait" required>
      <option value="" disabled selected>Select a trait</option>
      <% traits.forEach(t => { %>
        <option value="<%=t%>"><%=t%></option>
      <% }) %>
    </select>

    <label for="Alignment">Alignment</label>
    <select id="Alignment" name="Alignment" required>
      <option value="" disabled selected>Select a alignment</option>
      <% Alignment.forEach(t => { %>
        <option value="<%=t%>"><%=t%></option>
      <% }) %>
    </select>

    <button type="submit">Create Character</button>
  </form>

  <h2>Characters</h2>

  <% if (characters.length === 0) { %>
    <p>No characters yet. Create one above.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Trait</th>
          <th>Alignment</th>
        </tr>
      </thead>
      <tbody>
        <% characters.forEach(c => { %>
          <tr>
            <td>
              <a href="/characters/<%= c._id %>"><%= c.name %></a>
            </td>
            <td><%= c.type %></td>
            <td><%= c.trait %></td>
            <td><%= c.Alignment %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
